@model IEnumerable<Member>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-3">
        <div class="col-6">
            <h2 class="text-primary text-light">Member List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Member" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-cloud-plus"></i> &nbsp; Create New Member
            </a>
        </div>
    </div>
</div>
<br/>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
    <tr class="text-center">
        <th>First Name</th>
        <th>Last Name</th>
        <th>Phone Number</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var obj in Model)
    {
        <tr>
            <td width="25%">@obj.FirstName</td>
            <td width="25%">@obj.LastName</td>
            <td width="25%">@obj.PhoneNumber</td>
            <td width="25%" class="text-center">
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Member" asp-action="Edit" asp-route-id="@obj.Id" class="btn  btn-primary"><i class="bi bi-pencil"></i> Edit</a>
                    <a asp-controller="Member" asp-action="Delete" asp-route-id="@obj.Id" class="btn  btn-danger ms-2"><i class="bi bi-trash"></i>Delete</a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>

